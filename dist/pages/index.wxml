
  <view class="container">
    <!-- banner -->
    <view class="banner">
      <image class="banner-image" src="{{ bg_image_url }}" mode="aspectFill"/>

      <view class="userinfo">
        
  <view class="filter _fdf05fa">
    <image src="/images/filter.png" mode="aspectFill" bindtap="$Filter$toggleShow" class="_fdf05fa"/>

    <view class="filter-selector {{ $Filter$show ? '' : 'hidden' }} _fdf05fa" catchtap="$Filter$toggleShow">
      <view class="filter-lists _fdf05fa" catchtap="$Filter$nothing">
        <label  wx:for="{{ $Filter$items }}" wx:key="{{ item.id }}" catchtap="$Filter$handleFilter" class="_fdf05fa" data-wepy-params-a="{{ item.id }}"> {{ item.name }} </label>
      </view>
    </view>
  </view>
        <image class="userinfo-avatar" src="{{ avatar_url }}" mode="aspectFill"/>
      </view>
    </view>

    <!-- 新消息 -->
    <view class="new-msgs"  wx:if="{{ msg_count > 0 }}"/>

    <!-- 记录列表 -->
    <view class="record-lists">
      <block wx:for="{{ list }}" wx:for-index="index" wx:for-item="item" wx:key="recordid">
        
  <view class="record-list">
    <view class="record-avatar">
      <image src="{{item.photo}}" mode="aspectFill"/>
    </view>
    <view class="record-detail">
      <view class="record-userinfo">fdsf</view>
      <view class="record-disease-list"/>
      <view class="record-text"/>
      <view class="record-tool"/>
      <view class="record-hug"/>
      <view class="record-comments"/>
    </view>
  </view>

      </block> 
    </view>
  </view>